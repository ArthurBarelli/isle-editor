{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "consistent-return": 0,
    "comma-dangle": 0,
    "no-use-before-define": 0,
    "import/no-unresolved": [2, { ignore: ['electron'] }],
    "react/jsx-no-bind": 0,
    "react/prefer-stateless-function": 0,
    "indent": [2, "tab"],
    "space-in-parens": ["error", "always",{ "exceptions": ["{}"]}],
    "jsx-indent-props": [2, 'tab'],
    "jsx-indent": [2, 'tab']
  },
  "plugins": [
    "import",
    "react"
  ]
}
